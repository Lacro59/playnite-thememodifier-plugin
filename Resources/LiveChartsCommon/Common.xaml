<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <CornerRadius x:Key="CommonToolTipCornerRadius">4</CornerRadius>
    <Thickness x:Key="CommonToolTipBorderThickness">2</Thickness>
    <Thickness x:Key="CommonToolTipPadding">10, 10</Thickness>

    <Color x:Key="CommonToolTipBackground">#E4555555</Color>
    <Color x:Key="CommonToolTipBorder">#555555</Color>
    <Color x:Key="CommonToolTipWhiteColor">#FFFFFFFF</Color>

    <SolidColorBrush x:Key="CommonToolTipBackgroundBrush" Color="{DynamicResource CommonToolTipBackground}" />
    <SolidColorBrush x:Key="CommonToolTipBorderBrush" Color="{DynamicResource CommonToolTipBorder}" />
    <SolidColorBrush x:Key="CommonToolTipForeground" Color="{DynamicResource CommonToolTipWhiteColor}" />

</ResourceDictionary>