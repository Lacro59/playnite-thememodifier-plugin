<UserControl x:Class="ThemeModifier.Views.ThemeModifierSettingsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:ColorPickerWPF="clr-namespace:ColorPickerWPF;assembly=ColorPickerWPF"
             mc:Ignorable="d">

    <TabControl Margin="20">

        <TabItem Header="Edit theme">

            <Grid Grid.ColumnSpan="3">

                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="270" />
                    <ColumnDefinition Width="10" />
                    <ColumnDefinition Width="270" />
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="auto" />
                    <RowDefinition Height="auto" />
                    <RowDefinition Height="auto" />
                    <RowDefinition Height="auto" />
                    <RowDefinition Height="auto" />
                    <RowDefinition Height="auto" />
                    <RowDefinition Height="auto" />
                    <RowDefinition Height="auto" />
                    <RowDefinition Height="auto" />
                    <RowDefinition Height="40" />
                </Grid.RowDefinitions>

                <StackPanel Orientation="Horizontal" Margin="0,5" Grid.Row="0" Grid.Column="0">
                    <TextBlock Height="32" Width="32" Background="{DynamicResource ControlBackgroundBrush}"></TextBlock>
                    <Label Margin="10,0" Width="165">ControlBackgroundBrush</Label>
                    <Button Click="Button_Click">pick</Button>
                </StackPanel>

                <StackPanel Orientation="Horizontal" Margin="0,5" Grid.Row="0" Grid.Column="2">
                    <TextBlock Height="32" Width="32" Background="{DynamicResource TextBrush}"></TextBlock>
                    <Label Margin="10,0" Width="165">TextBrush</Label>
                    <Button Click="Button_Click">pick</Button>
                </StackPanel>

                <StackPanel Orientation="Horizontal" Margin="0,5" Grid.Row="1" Grid.Column="0">
                    <TextBlock Height="32" Width="32" Background="{DynamicResource TextBrushDarker}"></TextBlock>
                    <Label Margin="10,0" Width="165">TextBrushDarker</Label>
                    <Button Click="Button_Click">pick</Button>
                </StackPanel>

                <StackPanel Orientation="Horizontal" Margin="0,5" Grid.Row="1" Grid.Column="2">
                    <TextBlock Height="32" Width="32" Background="{DynamicResource TextBrushDark}"></TextBlock>
                    <Label Margin="10,0" Width="165">TextBrushDark</Label>
                    <Button Click="Button_Click">pick</Button>
                </StackPanel>

                <StackPanel Orientation="Horizontal" Margin="0,5" Grid.Row="2" Grid.Column="0">
                    <TextBlock Height="32" Width="32" Background="{DynamicResource NormalBrush}"></TextBlock>
                    <Label Margin="10,0" Width="165">NormalBrush</Label>
                    <Button Click="Button_Click">pick</Button>
                </StackPanel>

                <StackPanel Orientation="Horizontal" Margin="0,5" Grid.Row="2" Grid.Column="2">
                    <TextBlock Height="32" Width="32" Background="{DynamicResource NormalBrushDark}"></TextBlock>
                    <Label Margin="10,0" Width="165">NormalBrushDark</Label>
                    <Button Click="Button_Click">pick</Button>
                </StackPanel>

                <StackPanel Orientation="Horizontal" Margin="0,5" Grid.Row="3" Grid.Column="0">
                    <TextBlock Height="32" Width="32" Background="{DynamicResource NormalBorderBrush}"></TextBlock>
                    <Label Margin="10,0" Width="165">NormalBorderBrush</Label>
                    <Button Click="Button_Click">pick</Button>
                </StackPanel>

                <StackPanel Orientation="Horizontal" Margin="0,5" Grid.Row="3" Grid.Column="2">
                    <TextBlock Height="32" Width="32" Background="{DynamicResource HoverBrush}"></TextBlock>
                    <Label Margin="10,0" Width="165">HoverBrush</Label>
                    <Button Click="Button_Click">pick</Button>
                </StackPanel>

                <StackPanel Orientation="Horizontal" Margin="0,5" Grid.Row="4" Grid.Column="0">
                    <TextBlock Height="32" Width="32" Background="{DynamicResource GlyphBrush}"></TextBlock>
                    <Label Margin="10,0" Width="165">GlyphBrush</Label>
                    <Button Click="Button_Click">pick</Button>
                </StackPanel>

                <StackPanel Orientation="Horizontal" Margin="0,5" Grid.Row="4" Grid.Column="2">
                    <TextBlock Height="32" Width="32" Background="{DynamicResource HighlightGlyphBrush}"></TextBlock>
                    <Label Margin="10,0" Width="165">HighlightGlyphBrush</Label>
                    <Button Click="Button_Click">pick</Button>
                </StackPanel>

                <StackPanel Orientation="Horizontal" Margin="0,5" Grid.Row="5" Grid.Column="0">
                    <TextBlock Height="32" Width="32" Background="{DynamicResource PopupBorderBrush}"></TextBlock>
                    <Label Margin="10,0" Width="165">PopupBorderBrush</Label>
                    <Button Click="Button_Click">pick</Button>
                </StackPanel>

                <StackPanel Orientation="Horizontal" Margin="0,5" Grid.Row="5" Grid.Column="2">
                    <TextBlock Height="32" Width="32" Background="{DynamicResource TooltipBackgroundBrush}"></TextBlock>
                    <Label Margin="10,0" Width="165">TooltipBackgroundBrush</Label>
                    <Button Click="Button_Click">pick</Button>
                </StackPanel>

                <StackPanel Orientation="Horizontal" Margin="0,5" Grid.Row="6" Grid.Column="0">
                    <TextBlock Height="32" Width="32" Background="{DynamicResource ButtonBackgroundBrush}"></TextBlock>
                    <Label Margin="10,0" Width="165">ButtonBackgroundBrush</Label>
                    <Button Click="Button_Click">pick</Button>
                </StackPanel>

                <StackPanel Orientation="Horizontal" Margin="0,5" Grid.Row="6" Grid.Column="2">
                    <TextBlock Height="32" Width="32" Background="{DynamicResource GridItemBackgroundBrush}"></TextBlock>
                    <Label Margin="10,0" Width="165">GridItemBackgroundBrush</Label>
                    <Button Click="Button_Click">pick</Button>
                </StackPanel>

                <StackPanel Orientation="Horizontal" Margin="0,5" Grid.Row="7" Grid.Column="0">
                    <TextBlock Height="32" Width="32" Background="{DynamicResource PanelSeparatorBrush}"></TextBlock>
                    <Label Margin="10,0" Width="165">PanelSeparatorBrush</Label>
                    <Button Click="Button_Click">pick</Button>
                </StackPanel>

                <StackPanel Orientation="Horizontal" Margin="0,5" Grid.Row="7" Grid.Column="2">
                    <TextBlock Height="32" Width="32" Background="{DynamicResource PopupBackgroundBrush}"></TextBlock>
                    <Label Margin="10,0" Width="165">PopupBackgroundBrush</Label>
                    <Button Click="Button_Click">pick</Button>
                </StackPanel>

                <StackPanel Orientation="Horizontal" Margin="0,5" Grid.Row="8" Grid.Column="0">
                    <TextBlock Height="32" Width="32" Background="{DynamicResource PositiveRatingBrush}"></TextBlock>
                    <Label Margin="10,0" Width="165">PositiveRatingBrush</Label>
                    <Button Click="Button_Click">pick</Button>
                </StackPanel>

                <StackPanel Orientation="Horizontal" Margin="0,5" Grid.Row="8" Grid.Column="2">
                    <TextBlock Height="32" Width="32" Background="{DynamicResource PositiveRatingBrush}"></TextBlock>
                    <Label Margin="10,0" Width="165">NegativeRatingBrush</Label>
                    <Button Click="Button_Click">pick</Button>
                </StackPanel>

                <!--
                <StackPanel Orientation="Horizontal" Margin="0,5" Grid.Row="9" Grid.Column="0">
                    <TextBlock Height="32" Width="32" Background="{DynamicResource MixedRatingBrush}"></TextBlock>
                    <Label Margin="10,0" Width="165">MixedRatingBrush</Label>
                    <Button Click="Button_Click" VerticalAlignment="Center" Width="50">pick</Button>
                </StackPanel>

                <StackPanel Orientation="Horizontal" Margin="0,5" Grid.Row="9" Grid.Column="2">
                    <TextBlock Height="32" Width="32" Background="{DynamicResource ExpanderBackgroundBrush}"></TextBlock>
                    <Label Margin="10,0" Width="165">ExpanderBackgroundBrush</Label>
                    <Button Click="Button_Click">pick</Button>
                </StackPanel>
                -->

                <Button Grid.Row="9" Grid.Column="2" Name="btRestore" Content="Restore default" Click="BtRestore_Click" VerticalAlignment="Center"/>
            </Grid>
        </TabItem>

        <TabItem Header="View">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="270" />
                    <ColumnDefinition Width="10" />
                    <ColumnDefinition Width="270" />
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="auto" />
                    <RowDefinition Height="auto" />
                    <RowDefinition Height="auto" />
                    <RowDefinition Height="auto" />
                    <RowDefinition Height="auto" />
                    <RowDefinition Height="auto" />
                    <RowDefinition Height="auto" />
                    <RowDefinition Height="auto" />
                </Grid.RowDefinitions>

                <GroupBox Header="GroupBox Button" Margin="10" Padding="10" Grid.Column="0" Grid.Row="1" >
                    <StackPanel>
                        <Button VerticalAlignment="Center" Width="150" Margin="0,0,0,10">Button</Button>

                        <ToggleButton VerticalAlignment="Center" Width="150" IsChecked="True">ToggleButton</ToggleButton>
                    </StackPanel>
                </GroupBox>

                <GroupBox Header="GroupBox ProgressBar" Margin="10" Padding="10" Grid.Column="2" Grid.Row="1" >
                    <StackPanel>
                        <ProgressBar Width="150" Minimum="0" Maximum="100" Value="10" Height="28" Margin="0,0,0,10" />

                        <ProgressBar Width="150" IsIndeterminate="True" Height="28" />
                    </StackPanel>
                </GroupBox>

                <Border Grid.Column="0" Grid.Row="2" Grid.ColumnSpan="3" Margin="0,10" BorderThickness="1">
                    <DockPanel>
                        <StackPanel VerticalAlignment="Center" DockPanel.Dock="Left" Width="270">
                            <CheckBox VerticalAlignment="Center" DockPanel.Dock="Left" Width="270" Margin="0,0,0,10">
                                <Label>Checkbox with label</Label>
                            </CheckBox>
                            <CheckBox VerticalAlignment="Center" DockPanel.Dock="Left" Width="270" HorizontalAlignment="Center" IsChecked="True">
                                <Label>Checkbox with label</Label>
                            </CheckBox>
                        </StackPanel>

                        <StackPanel DockPanel.Dock="Right" Width="270" Margin="30,0,0,0">
                            <RadioButton Margin="0,0,0,10">RadioButton</RadioButton>
                            <RadioButton IsChecked="True">RadioButton</RadioButton>
                        </StackPanel>
                    </DockPanel>
                </Border>

                <TreeView HorizontalAlignment="Center" Width="200" Grid.Column="0" Grid.Row="3">
                    <ScrollViewer Height="100">
                        <TreeViewItem Header="Level 1" IsExpanded="True">
                            <TreeViewItem Header="Level 2.1" />
                            <TreeViewItem Header="Level 2.2" IsExpanded="True">
                                <TreeViewItem Header="Level 3.1" />
                                <TreeViewItem Header="Level 3.2" />
                            </TreeViewItem>
                            <TreeViewItem Header="Level 2.3" />
                            <TreeViewItem Header="Level 2.4" />
                            <TreeViewItem Header="Level 2.5" />
                        </TreeViewItem>
                    </ScrollViewer>
                </TreeView>

                <StackPanel Grid.Column="2" Grid.Row="3">
                    <Slider Minimum="0" Maximum="50" Value="15" Margin="0,0,0,10"></Slider>

                    <TextBlock>           
                <Hyperlink>Hyperlink example</Hyperlink>
                    </TextBlock>

                    <RepeatButton  VerticalAlignment="Center" Width="150" Margin="0,10,0,10" Delay="500" Interval="500">
                        RepeatButton
                    </RepeatButton>
                </StackPanel>

                <Button Grid.Column="0" Grid.Row="4" Content="Menu test" VerticalAlignment="Center" HorizontalAlignment="Center" Width="150" Margin="0,10">
                    <Button.ContextMenu>
                        <ContextMenu>
                            <MenuItem Header="Menu item 1" />
                            <MenuItem Header="Menu item 2" />
                            <Separator />
                            <MenuItem Header="Menu item 3" />
                        </ContextMenu>
                    </Button.ContextMenu>
                </Button>

                <Expander Grid.Column="2" Grid.Row="4" >
                    <TextBlock TextWrapping="Wrap">  
                        Exmpale text for Expander control.
                    </TextBlock>
                </Expander>
            </Grid>
        </TabItem>
    </TabControl>
    
</UserControl>